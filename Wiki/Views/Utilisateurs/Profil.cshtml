@model Wiki.Models.Views.UtilisateurProfilViewModel
@using Wiki.Resources.Models
@using Wiki.Resources.Views
@using Wiki.Models.DAL

@{ 
    List<SelectListItem> selectListItemLangues = Utilisateur.RetourneSelectListItemLangues();
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@StringUtilisateurs.ProfilTitre</h4> 
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Prenom, htmlAttributes: new { @class = "control-label col-md-2" }) 
            <div class="col-md-10">
                @Html.EditorFor(model => model.Prenom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Prenom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NomFamille, htmlAttributes: new { @class = "control-label col-md-2" }) 
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomFamille, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NomFamille, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Langue, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Langue, selectListItemLangues, new { @class = "btn btn-default" })
                @Html.ValidationMessageFor(model => model.Langue, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*http://stackoverflow.com/questions/4171664/html-submit-button-different-value-button-text*@
                <button class="btn btn-default" type="submit" value="Sauvegarder">@StringUtilisateurs.ProfilBoutonSauvegarder</button>
                @Html.ActionLink(StringUtilisateurs.ProfilLienModifierMDP, "ModifierMDP", null, new { @class = "btn btn-default" }) 
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(StringUtilisateurs.ProfilLienAnnuler, "Index", "Home", null, new { @class = "btn btn-default" }) 
</div>
