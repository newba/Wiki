@model Wiki.Models.Views.UtilisateurModifierMDPViewModel
@using Wiki.Resources.Models
@using Wiki.Resources.Views

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@StringUtilisateurs.ModifierMDPTitre</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.AncienMDP, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.AncienMDP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AncienMDP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MDP, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.MDP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MDP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MDPConfirmation, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.MDPConfirmation, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MDPConfirmation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*http://stackoverflow.com/questions/4171664/html-submit-button-different-value-button-text*@
                <button class="btn btn-default" type="submit" value="Save">@StringUtilisateurs.ModifierMDPBoutonModifier</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(StringUtilisateurs.ModifierMDPLienAnnuler, "Index", "Home", null, new { @class = "btn btn-default" })
</div>
