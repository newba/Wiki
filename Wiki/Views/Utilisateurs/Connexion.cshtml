@model Wiki.Models.Views.UtilisateursConnexionViewModel
@using Wiki.Resources.Models
@using Wiki.Resources.Views

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@StringUtilisateurs.ConnexionTitre</h4> 
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Courriel, htmlAttributes: new { @class = "control-label col-md-2" }) 
            <div class="col-md-10">
                @Html.EditorFor(model => model.Courriel, new { htmlAttributes = new { @class = "text-box single-line" } })
                @Html.ValidationMessageFor(model => model.Courriel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MDP, htmlAttributes: new { @class = "control-label col-md-2" }) 
            <div class="col-md-10">
                @Html.PasswordFor(model => model.MDP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MDP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConnexionPersistante, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.ConnexionPersistante)
                    @Html.ValidationMessageFor(model => model.ConnexionPersistante, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*http://stackoverflow.com/questions/4171664/html-submit-button-different-value-button-text*@
                <button class="btn btn-default" type="submit" value="Connexion">@StringUtilisateurs.ConnexionBoutonConnexion</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink(StringUtilisateurs.ConnexionLienInscription, "Inscription", "Utilisateurs", null, new { @class = "btn btn-default" }) 
</div>
